@model MarketplaceWebApplication.Models.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<h2>Реєстрація нового користувача</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="UserName" class="control-label"></label><br />
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="FirstName" class="control-label"></label><br />
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label asp-for="LastName" class="control-label"></label><br />
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label asp-for="DateOfBirth" class="control-label"></label><br />
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" ></span>
            </div>
            <div>
                <label asp-for="PhoneNumber" class="control-label"></label><br />
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div>
                <label asp-for="Password" class="control-label"></label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm" class="control-label"></label><br />
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <input type="submit" value="Реєстрація" class="btn btn-primary" style="margin: 10px;" />
            </div>
        </form>
    </div>
</div>


