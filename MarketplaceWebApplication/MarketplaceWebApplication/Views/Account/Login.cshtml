@model MarketplaceWebApplication.Models.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<h2>Вхід</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password" class="control-label"></label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
            </div>
            <div>
                <input type="submit" value="Увійти" class="btn btn-primary" style="margin: 5px;" />
            </div>
        </form>
    </div>
</div>
