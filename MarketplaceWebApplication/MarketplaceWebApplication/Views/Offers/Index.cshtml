@model IEnumerable<MarketplaceWebApplication.Data.Offer>
@using Microsoft.AspNetCore.Http
@using MarketplaceWebApplication.Extensions
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Пропозиції";
    var userInfo = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<UserDetails>("UserDetails");
}

@if (userInfo is null)
{
    <h1>Ви поки-що не увійшли до кабінету</h1>
    <a asp-controller="Users" asp-action="Index" asp-route-id="" class="btn btn-primary">Увійти</a>
}
else 
{ 
    @if ((Model.Select(model => model.SellerId == userInfo.Id)).Count() == 0)
    {
        <h1>Ви поки-що не додали жодної пропозиції</h1>
        <p>
            <a asp-action="Create" class="btn btn-primary">Додати свою пропозицію</a>
        </p>
    }

    else 
    {
        <h1>Ваші товари</h1>
        <p>
            <a asp-action="Create" class="btn btn-primary">Додати свою пропозицію</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                    <th>
                        Ціна
                    </th>
                    <th>
                        Фото
                    </th>
                    <th>
                        Кількість замовлень
                    </th>
                    <th>
                        Час створення
                    </th>
                    <th>
                        Статус видалення
                    </th>
                    <th>
                        Чи приховано
                    </th>
                    <th>
                        Кількість в наявності
                    </th>
                    <th>
                        Категорія
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                    if (item.SellerId == userInfo.Id)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    @if (item.Photo != null && item.Photo.Length > 0)
                    {
                        string base64String = Convert.ToBase64String(item.Photo);
                        <td>
                        <img src="data:image;base64,@base64String" alt="Photo" style="width:100px; height:auto;"/>
                        </td>
                    }
                    else
                    {
                        <td>
                            Фото відсутнє
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfOrders)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsHidden)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 5px;">Редагувати</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 5px;">Деталі</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 5px;">Видалити</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    }
}
