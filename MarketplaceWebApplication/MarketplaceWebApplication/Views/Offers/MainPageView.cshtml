@model IEnumerable<MarketplaceWebApplication.Data.Offer>
@using Microsoft.AspNetCore.Http
@using MarketplaceWebApplication.Extensions
@using MarketplaceWebApplication.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Головна сторінка";
    var userInfo = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<UserDetails>("UserDetails");

    if (String.IsNullOrEmpty(ViewBag.SearchWord))
    {
        ViewBag.SearchWord = "";
    }

    List<OffersRatings> ORList = ViewBag.ORList;
}

<form asp-action="MainPageView" asp-controller="Offers" method="get">
    <label for="Text" class="control-label">Пошук</label>
    <input name="searchWord" class="form-control" value="@ViewBag.SearchWord" />
    <button type="submit" class="btn btn-primary" style="margin: 5px;">Шукати</button>
</form>

@if (Model.Count() == 0)
{
    <h1>На жаль, нічого не знайдено</h1>
}
else
{
    <h1>Ласкаво просимо! Що хочете придбати або продати сьогодні?</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Назва
                </th>
                <th>
                    Ціна (в грн)
                </th>
                <th>
                    Фото
                </th>
                <th>
                    Час створення
                </th>
                <th>
                    Кількість товару
                </th>
                <th>
                    Категорія
                </th>
                <th>
                    Рейтинг
                </th>
                <th>
                    Продавець
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @if (item.Photo != null && item.Photo.Length > 0)
                {
                    string base64String = Convert.ToBase64String(item.Photo);
                    <td>
                        <img src="data:image;base64,@base64String" alt="Photo" style="width:100px; height:auto;" />
                    </td>
                }
                else
                {
                    <td>
                        Фото відсутнє
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.TimeAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                @{
                    var rating = ORList.FirstOrDefault(or => or.OfferId == item.Id).Rating;
                    if (rating != -1)
                    {
                        <td>
                            @rating
                        </td>
                    }
                    else
                    {
                        <td>
                            Немає відгуків
                        </td>
                    }
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.Username)
                </td>
                <td>
                    @if (userInfo is not null && item.SellerId != userInfo.Id)
                    {
                        <a asp-controller="OrderItems" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 5px;">Замовити</a>
                        <a asp-controller="SavedOffers" asp-action="Save" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 5px;">Зберегти</a>
                        <a asp-controller="Feedbacks" asp-action="Create" asp-route-id=@item.Id class="btn btn-primary" style="margin: 5px;">Додати відгук</a>
                    }
                    <a asp-controller="Feedbacks" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 5px;">Відгуки</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" style="margin: 5px;">Деталі</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}