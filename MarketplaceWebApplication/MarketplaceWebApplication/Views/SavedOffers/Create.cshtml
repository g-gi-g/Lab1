@model MarketplaceWebApplication.Data.SavedOffer
@using Microsoft.AspNetCore.Http
@using MarketplaceWebApplication.Extensions
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Зберегти";
    var userInfo = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<UserDetails>("UserDetails");
}

<h1>Зберегти</h1>

<h4>пропозицію</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="UserId" class ="form-control" value="@userInfo.Id" hidden></select>
            </div>
            <div class="form-group">
                <label asp-for="OfferId" class="control-label"></label>
                <select asp-for="OfferId" class ="form-control" asp-items="ViewBag.OfferId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimeAdded" class="control-label"></label>
                <input asp-for="TimeAdded" class="form-control" />
                <span asp-validation-for="TimeAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
