@model IEnumerable<MarketplaceWebApplication.Data.Notification>

@{
    ViewData["Title"] = "Повідомлення";
}

<h3>Ваші повідомлення</h3>


@foreach (var item in Model) {
    <div class="card">
        <h5 class="card-header">@item.Class.Name</h5>
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <p class="card-text">@item.Text</p>
            <p class="card-text">@item.TimeAdded</p>
            <a href="@Url.Action("Delete", "Notifications", new { id = item.Id })" class="btn btn-danger">Видалити</a>
        </div>
    </div>
    <hr />
}
