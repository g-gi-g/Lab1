@model MarketplaceWebApplication.Models.OrderItemForm

@{
    ViewData["Title"] = "Змінити замовлення";
}

<h1>Змінити</h1>

<h4>замовлення</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="OrderId" class ="form-control" value=@Model.OrderId hidden></input>
            </div>
            <div class="form-group">
                <input asp-for="OfferId" class="form-control" value=@Model.OfferId hidden></input>
            </div>

            <div class="form-group">
                <label for="Price" class="control-label">Ціна</label>
                <input asp-for="Price" class="form-control" value=@Model.Price />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Quantity" class="control-label">Кількість</label>
                <input asp-for="Quantity" class="form-control" value =@Model.Quantity/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DateOfOrder" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="CustomerId" class="form-control" value=@Model.CustomerId hidden></input>
            </div>
            <div class="form-group">
                <input asp-for="TransactionId" class="form-control" value=@Model.TransactionId hidden />
            </div>
            <div class="form-group">
                <label for="Quantity" class="control-label">Статус</label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusName"></select>
            </div>
            <div class="form-group">
                <label for="PaymentMethodId" class="control-label">Метод оплати</label>
                <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodName"></select>
            </div>
            <div class="form-group">
                <label for="Comment" class="control-label">Коментар</label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ShippingCompanyId" class="control-label">Компанія доставки</label>
                <select asp-for="ShippingCompanyId" class="form-control" asp-items="ViewBag.ShippingCompany"></select>
            </div>

            <div class="form-group">
                <label for="ArrivalCountry" class="control-label">Країна прибуття</label>
                <input asp-for="ArrivalCountry" class="form-control" />
                <span asp-validation-for="ArrivalCountry" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalCity" class="control-label">Місто прибуття</label>
                <input asp-for="ArrivalCity" class="form-control" />
                <span asp-validation-for="ArrivalCity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalStreet" class="control-label">Вулиця прибуття</label>
                <input asp-for="ArrivalStreet" class="form-control" />
                <span asp-validation-for="ArrivalStreet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalBuildingNumber" class="control-label">Номер будинку прибуття</label>
                <input asp-for="ArrivalBuildingNumber" class="form-control" />
                <span asp-validation-for="ArrivalBuildingNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalZipCode" class="control-label">Поштовий індекс прибуття</label>
                <input asp-for="ArrivalZipCode" class="form-control" />
                <span asp-validation-for="ArrivalZipCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DepartmentCountry" class="control-label">Країна відправлення</label>
                <input asp-for="DepartmentCountry" class="form-control" />
                <span asp-validation-for="DepartmentCountry" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DepartmentCity" class="control-label">Місто відправлення</label>
                <input asp-for="DepartmentCity" class="form-control" />
                <span asp-validation-for="ArrivalCity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DepartmentStreet" class="control-label">Вулиця відправлення</label>
                <input asp-for="DepartmentStreet" class="form-control" />
                <span asp-validation-for="DepartmentStreet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DepartmentBuildingNumber" class="control-label">Номер будинку відправлення</label>
                <input asp-for="DepartmentBuildingNumber" class="form-control" />
                <span asp-validation-for="DepartmentBuildingNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DepartmentZipCode" class="control-label">Поштовий індекс відправлення</label>
                <input asp-for="DepartmentZipCode" class="form-control" />
                <span asp-validation-for="DepartmentZipCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Змінити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Clients">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
