@model MarketplaceWebApplication.Data.OrderItem
@using Microsoft.AspNetCore.Http
@using MarketplaceWebApplication.Extensions
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Видалити";
    var userInfo = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<UserDetails>("UserDetails");
}

<div class="text-center">
    <h3>Ви впевнені, що хочете відмінити замовлення?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        @if (Model.Offer.SellerId == userInfo.Id)
        {
            <a asp-action="Clients" class="btn btn-primary">Назад</a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-primary">Назад</a>
        }
    </form>
</div>
