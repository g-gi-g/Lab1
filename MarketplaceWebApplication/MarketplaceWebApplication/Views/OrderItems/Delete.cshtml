@model MarketplaceWebApplication.Data.OrderItem
@using Microsoft.AspNetCore.Http
@using MarketplaceWebApplication.Extensions
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Видалити";
    var userInfo = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<UserDetails>("UserDetails");
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @if (Model.Offer.SellerId == userInfo.Id)
        {
            <a asp-action="Clients">Назад</a>
        }
        else
        {
            <a asp-action="Index">Назад</a>
        }
    </form>
</div>
