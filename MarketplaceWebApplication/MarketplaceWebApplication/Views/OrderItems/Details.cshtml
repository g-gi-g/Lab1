@model MarketplaceWebApplication.Data.OrderItem

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі</h1>

<div>
    <h4>замовлення</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ціна
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Кількість
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Назва товару
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Offer.Name)
        </dd>
        <dt class = "col-sm-2">
            Номер замовлення
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Id)
        </dd>
        <dt class="col-sm-2">
            Фото
        </dt>
        @if (ViewBag.Offer.Photo != null && ViewBag.Offer.Photo.Length > 0)
        {
            string base64String = Convert.ToBase64String(ViewBag.Offer.Photo);
            <dd class="col-sm-10">
                <img src="data:image;base64,@base64String" alt="Photo" style="width:200px; height:auto;" />
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Фото відсутнє
            </dd>
        }
        <dt class="col-sm-2">
            Ім'я продавця
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Seller.Username
        </dd>
        <dt class="col-sm-2">
            Ім'я замовника
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Customer.Username
        </dd>
        <dt class="col-sm-2">
            Статус замовлення
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Status.Name
        </dd>
        <dt class="col-sm-2">
            Дата замовлення
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.DateOfOrder)
        </dd>
        <dt class="col-sm-2">
            Метод оплати
        </dt>
        <dd class="col-sm-10">
            @ViewBag.PaymentMethod.Name
        </dd>
        <dt class="col-sm-2">
            Коментар
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Comment)
        </dd>
        <dt class="col-sm-2">
            Компанія доставки
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ShippingCompany.Name
        </dd>
        <dt class="col-sm-2">
            Країна прибуття
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.ArrivalCountry
        </dd>
        <dt class="col-sm-2">
            Місто прибуття
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.ArrivalCity
        </dd>
        <dt class="col-sm-2">
            Вулиця прибуття
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.ArrivalStreet
        </dd>
        <dt class="col-sm-2">
            Будинок прибуття
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.ArrivalBuildingNumber
        </dd>
        <dt class="col-sm-2">
            Поштовий індекс отримувача
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.ArrivalZipCode
        </dd>
        <dt class="col-sm-2">
            Країна відправлення
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.DepartmentCountry
        </dd>
        <dt class="col-sm-2">
            Місто відправлення
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.DepartmentCity
        </dd>
        <dt class="col-sm-2">
            Вулиця відправлення
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.DepartmentStreet
        </dd>
        <dt class="col-sm-2">
            Будинок відправлення
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.DepartmentBuildingNumber
        </dd>
        <dt class="col-sm-2">
            Поштовий індекс відправника
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Shipping.DepartmentZipCode
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.Offer.SellerId == ViewBag.UserId)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редагувати</a>
        <a asp-action="Clients" class="btn btn-primary">Назад</a>
    }
    else
    {
        <a asp-action="Index" asp-route-id="@Model?.Id" class="btn btn-primary">Назад</a>
    }
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Видалити</a>
</div>
