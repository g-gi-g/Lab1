@model IEnumerable<MarketplaceWebApplication.Data.OrderItem>

@{
    ViewData["Title"] = "Замовлення клієнтів";
    if (String.IsNullOrEmpty(ViewBag.SearchWord))
    {
        ViewBag.SearchWord = "";
    }
}

<h1>Замовлення клієнтів</h1>

@if (Model.Count() == 0 && String.IsNullOrEmpty(ViewBag.SearchWord))
{
    <h1>У Вас поки-що нічого не замовили</h1>
}
else
    {
    <form asp-action="Clients" asp-controller="OrderItems" method="get">
        <label for="Text" class="control-label" >Пошук</label>
        <input name="searchWord" class="form-control" value="@ViewBag.SearchWord" />
        <button type="submit" class="btn btn-primary" style="margin: 5px;">Шукати</button>
    </form>
    if (Model.Count() == 0)
    {
        <h1>Нічого не знайдено</h1>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                    <th>
                        Фото
                    </th>
                    <th>
                        Номер
                    </th>
                    <th>
                        Кількість
                    </th>
                    <th>
                        Ціна
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Offer.Name)
                        </td>
                        @if (item.Offer.Photo != null && item.Offer.Photo.Length > 0)
                        {
                            string base64String = Convert.ToBase64String(item.Offer.Photo);
                            <td>
                                <img src="data:image;base64,@base64String" alt="Photo" style="width:100px; height:auto;" />
                            </td>
                        }
                        else
                        {
                            <td>
                                Фото відсутнє
                            </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.Order.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}