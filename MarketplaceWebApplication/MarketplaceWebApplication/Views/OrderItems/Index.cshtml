@model IEnumerable<MarketplaceWebApplication.Data.OrderItem>

@{
    ViewData["Title"] = "Мої замовлення";
}

<h1>Мої замовлення</h1>

<form asp-action="Index" asp-controller="OrderItems" method="get">
    <label for="Text" class="control-label">Пошук</label>
    <input name="searchWord" class="form-control" />
    <button type="submit" class="btn btn-primary" style="margin: 5px;">Шукати</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Offer)
            </th>
            <th>
                Фото
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Offer.Name)
            </td>
            @if (item.Offer.Photo != null && item.Offer.Photo.Length > 0)
            {
                string base64String = Convert.ToBase64String(item.Offer.Photo);
                <td>
                    <img src="data:image;base64,@base64String" alt="Photo" style="width:100px; height:auto;" />
                </td>
            }
            else
            {
                <td>
                    Фото відсутнє
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Order.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
