@model MarketplaceWebApplication.Models.OrderItemCreationForm

@{
    ViewData["Title"] = "Створити замовлення";
}

<h1>Створити</h1>

<h4>замовлення</h4>
<hr />
<label class="control-label">@ViewBag.Offer.Name</label>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--<div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <select asp-for="OrderId" class ="form-control" asp-items="ViewBag.OrderId"></select>
            </div>-->
            <div class="form-group">
                <select asp-for="OfferId" class ="form-control" asp-items="ViewBag.OfferId" hidden></select>
            </div>

            <div class="form-group">
                <label for="Price" class="control-label">Ціна</label>
                <input asp-for="Price" class="form-control" value="@ViewBag.Offer.Price" readonly />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Quantity" class="control-label">Кількість</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="CustomerId" class="form-control" value="@ViewBag.UserId" hidden></input>
            </div>
            <div class="form-group">
                <input asp-for="TransactionId" class="form-control" value=0 hidden />
            </div>
            <div class="form-group">
                <input asp-for="StatusId" class="form-control" value=1 hidden></input>
            </div>
            <div class="form-group">
                <label for="PaymentMethodId" class="control-label">Метод оплати</label>
                <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodName"></select>
            </div>
            <div class="form-group">
                <label for="Comment" class="control-label">Коментар</label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ShippingCompanyId" class="control-label">Компанія доставки</label>
                <select asp-for="ShippingCompanyId" class="form-control" asp-items="ViewBag.ShippingCompany"></select>
            </div>

            <div class="form-group">
                <label for="ArrivalCountry" class="control-label">Країна</label>
                <input asp-for="ArrivalCountry" class="form-control" />
                <span asp-validation-for="ArrivalCountry" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalCity" class="control-label">Місто</label>
                <input asp-for="ArrivalCity" class="form-control" />
                <span asp-validation-for="ArrivalCity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalStreet" class="control-label">Вулиця</label>
                <input asp-for="ArrivalStreet" class="form-control" />
                <span asp-validation-for="ArrivalStreet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalBuildingNumber" class="control-label">Номер будинку</label>
                <input asp-for="ArrivalBuildingNumber" class="form-control" />
                <span asp-validation-for="ArrivalBuildingNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ArrivalZipCode" class="control-label">Поштовий індекс</label>
                <input asp-for="ArrivalZipCode" class="form-control" />
                <span asp-validation-for="ArrivalZipCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
